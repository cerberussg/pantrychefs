<%= render 'shared/page_title', title: "#{@fixing.name}" %>

<% if @fixing.recipes.count != 0 %>
  <h4 align="center">Recipe's containing <%= @fixing.name %></h4>
  <div align="center">
    <%= will_paginate @fixing_recipes %>
  </div>
  <%= render 'recipes/recipe', obj: @fixing_recipes %>
  <div align="center">
    <%= will_paginate @fixing_recipes %>
  </div>
<% else %>
  <h4 align="center">No recipes yet!</h4>
<% end %>